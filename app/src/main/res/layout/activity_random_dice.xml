<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RandomDice">
    <Button
            android:text="Create random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDice" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:onClick="onCreateDiceClick"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.42" app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="cat love me!"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDice" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText1"

    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="dog love me!"
            android:ems="10"
            android:id="@+id/editText1" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDice" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="bird love me!"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="212dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDice" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="girl love me!"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="152dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDice" android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>